                <GradientStop Color="#00000000"/>
                <GradientStop Color="#00000000" Offset="0.687"/>
                <GradientStop Color="#FF000000" Offset="1"/>
            </RadialGradientBrush>
        </Grid.OpacityMask>
    </Grid>
</Window>
